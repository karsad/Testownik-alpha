<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="colorButtonNormal">#0066ff</item>
    <item name="android:textColorSecondary">#0066ff</item>
    <item name="android:textColorSecondaryInverse">@android:color/black</item>
</style>

<style name="AppTheme_Night" parent="Theme.AppCompat.NoActionBar">
    <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
    <item name="colorButtonNormal">#232323</item>
    <item name="android:textColorSecondary">@android:color/black</item>
    <item name="android:colorBackground">@color/background_material_light</item>
    <item name="android:textColorPrimaryInverse">?android:attr/textColorTertiary</item>
    <item name="android:textColorSecondaryInverse">#e2e2e2</item>
    <item name="colorPrimary">@android:color/black</item>
</style>



<style name="Button" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_marginBottom">12dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">25dp</item>


</style>

<style name="small_text" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textSize">15dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginTop">10dp</item>
</style>


</resources>
