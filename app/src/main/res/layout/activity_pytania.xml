<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pytania"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.master.testownik13.Pytania">

    <TextView
        android:id="@+id/tv_pytanie"
        android:layout_width="300dp"
        android:textColor="?android:textColorSecondaryInverse"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_height="190dp" />

    <CheckBox
        android:layout_width="350dp"
        android:id="@+id/odp_4"
        android:textColor="?android:textColorSecondaryInverse"
        android:textSize="18dp"
        android:layout_below="@+id/odp_3"
        android:layout_alignLeft="@+id/odp_3"
        android:layout_alignStart="@+id/odp_3"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Dalej    ->"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_next"
        style="@style/Button"
        android:textColor="?android:textColorPrimaryInverse"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="350dp"
        android:id="@+id/odp_3"
        android:textColor="?android:textColorSecondaryInverse"
        android:textSize="18dp"
        android:layout_below="@+id/odp_2"
        android:layout_alignLeft="@+id/odp_2"
        android:layout_alignStart="@+id/odp_2"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:layout_width="350dp"
        android:id="@+id/odp_2"
        android:textColor="?android:textColorSecondaryInverse"
        android:textSize="18dp"
        android:layout_below="@+id/odp_1"
        android:layout_alignLeft="@+id/odp_1"
        android:layout_alignStart="@+id/odp_1"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:layout_width="350dp"
        android:id="@+id/odp_1"
        android:textColor="?android:textColorSecondaryInverse"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv_pytanie"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
